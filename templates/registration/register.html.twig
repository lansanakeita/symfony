{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

  <div class="login_register_wrap section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-6 col-md-10">
          <div class="login_wrap">
            <div class="padding_eight_all bg-white">
              <div class="text-center" "heading_s1">
                  <h3>Création de Compte</h3>
              </div>

              {{ form_start(registrationForm) }}
                <div class="form-group">
                  {{ form_label(registrationForm.firstName, 'Prénom') }}
									{{ form_widget(registrationForm.firstName) }}
                </div>

                <div class="form-group">
                  {{ form_label(registrationForm.lastName, 'Nom de Famille') }}
                  {{ form_widget(registrationForm.lastName) }}
                </div>

                <div class="form-group">
                  {{ form_label(registrationForm.phone, 'Numéro de téléphone') }}
                  {{ form_widget(registrationForm.phone) }}
                </div> 

                <div class="form-group">
                    {{ form_row(registrationForm.email, {'attr': {'pattern': '[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,63}$'}}) }}
                </div>

                <div class="form-group">
                    {{ form_row(registrationForm.lycee) }}
                </div> 

                <div class="form-group">
                    {{ form_row(registrationForm.section) }}
                </div> 

                <div class="form-group">
                    {{ form_row(registrationForm.plainPassword) }}
                </div>

                  <hr> 

                <div class="text-center " "form-group">
                    <button type="submit" class="btn btn-primary" name="register">S'inscrire</button>
                </div>
              {{ form_end(registrationForm) }}

              <div class="form-note text-center">Déjà inscrit ? <a href="{{path('app_login')}}">ici</a></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

 
{% endblock %}
