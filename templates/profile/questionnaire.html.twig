{% extends 'base.html.twig' %}

{% block title %}Questionnaire
{% endblock %}

{% block body %}

    <div id="mon_formulaire">

        {% if currentQuestion == null %}
            <h1 id="titre_questionnaire"> Questionnaire indisponible pour le moment  </h1>

        {% else %}
            <h1 id="titre_questionnaire"> Questionnaire de satisfaction du forum de l'ann√©e  </h1>
            {{ form_start(form) }}
                <div id="formulaire_question" class="d-flex flex-column gap-5">
                    {% for question in questions %}
                        <div class="form-group">
                            {{ question.getTextQuestion() }}
                            {{ form_widget(form.text_reponse) }}
                        </div>
                        <div class="form-group">
                            {{ question.getTextQuestion1() }}
                            {{ form_widget(form.text_reponse1) }}
                        </div>

                        <div class="form-group">
                            {{ question.getTextQuestion2() }}
                            {{ form_widget(form.text_reponse2) }}
                        </div>

                        <div class="form-group">
                            {{ question.getTextQuestion3() }}
                            {{ form_widget(form.text_reponse3) }}
                        </div>

                        <div class="form-group">
                            {{ question.getTextQuestion4() }}
                            {{ form_widget(form.text_reponse4) }}
                        </div>

                        <div class="form-group">
                            {{ form_widget(form.commentaire) }}
                        </div>
                    {% endfor %}

                    <button type="submit" id="bouton_formulaire"> envoyer </button>
                </div>
            {{ form_end(form) }}

        {% endif %}

       
    </div>



{% endblock %}