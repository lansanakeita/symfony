{% extends 'profile.html.twig' %}

{% block title %}Profil de {{ app.user.firstName }} {{ app.user.lastName }}{% endblock %}

{% block body %}
	<div class="grix xs4 container">
		{% for message in app.flashes('message') %}
			<div class="col-xs4">
				<div class="p-3 my-2 rounded-2 success">{{message}}</div>
			</div>
		{% endfor %}
		<div class="col-xs4">
			<h1>Profil de {{ app.user.firstName }} {{ app.user.lastName }}</h1>
		</div>
		<div class="col-xs1">Nom :</div>
		<div class="col-xs3">{{ app.user.lastName }}</div>
		<div class="col-xs1">Prénom :</div>
		<div class="col-xs3">{{ app.user.firstName }}</div>
		<div class="col-xs1">Email :</div>
		<div class="col-xs3">{{ app.user.email }}</div>
    <div class="col-xs1">Téléphone :</div>
		<div class="col-xs3">{{ app.user.phone }}</div>
		<div class="col-xs4">
            <a href="#" class="btn blue">Modifier le profil</a>
            <a href="#" class="btn blue">Modifier le mot de passe</a>
            {# <a href="{{ path('users_data')}}" class="btn grey">Voir mes données personnelles (RGPD)</a> #}
        </div>

		<div class="col-xs4">
			{# <h1>{{ app.user.firstName }} {{ app.user.lastName }} </h1> #}
		
{% endblock %}